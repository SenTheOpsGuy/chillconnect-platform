# .env.example - Copy to .env.local and fill in your values

# Database
POSTGRES_PRISMA_URL="your-vercel-postgres-url"
POSTGRES_URL_NON_POOLING="your-vercel-postgres-direct-url"

# Authentication
NEXTAUTH_URL="https://newchillconnect.vercel.app"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Brevo (SendinBlue)
BREVO_API_KEY="your-brevo-api-key"
BREVO_SENDER_EMAIL="noreply@chillconnect.in"

# Twilio
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_VERIFY_SERVICE_SID="your-verify-service-sid"
TWILIO_PHONE_NUMBER="+911234567890"

# Stripe
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Google APIs
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REFRESH_TOKEN="your-google-refresh-token"

# Pusher (Real-time)
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="ap2"
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
NEXT_PUBLIC_PUSHER_CLUSTER="ap2"

# Upstash Redis
UPSTASH_REDIS_REST_URL="your-upstash-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Vercel Blob
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# Cashfree Payment Gateway
CASHFREE_APP_ID="your-cashfree-app-id"
CASHFREE_SECRET_KEY="your-cashfree-secret-key"
CASHFREE_BASE_URL="https://sandbox.cashfree.com/pg"  # Use https://api.cashfree.com/pg for production

# Cron jobs secret
CRON_SECRET="your-cron-secret"